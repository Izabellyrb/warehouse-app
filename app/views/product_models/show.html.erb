<h2> <%= @product_model.name %> </h2>

<div>
	<dl>
		<dt><strong><%= ProductModel.human_attribute_name(:weight) %>:</strong></dt>
		<dd><%= @product_model.weight %> g</dd>
					
		<dt><strong><%= ProductModel.human_attribute_name(:dimentions) %>:</strong></dt>
		<dd><%= @product_model.width %> cm x 
				<%= @product_model.height %> cm x 
				<%= @product_model.depth %> cm</dd>

		<dt><strong><%= ProductModel.human_attribute_name(:sku) %>:</strong></dt>
		<dd><%= @product_model.sku %></dd>

		<dt><strong><%= ProductModel.human_attribute_name(:supplier) %>:</strong></dt>
		<dd><%= @product_model.supplier.brand_name %></dd>
	</dl> 
</div>

<div> 
	<%= link_to 'Voltar', product_models_url%>
</div>
